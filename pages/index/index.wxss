/* pages/index/index.wxss */
.hero {
  position: relative;
}
.hero image,.hero video {
  height: 38.2vh;
}
.hero.white {
  background: #fff;
}
.hero .content {
  padding-top: 10%
}
.hero .centered {
  text-align: center;
}
.hero .sub-header {
  font-size: 32rpx;
  /* 字母大写 */
  text-transform: uppercase; 
  letter-spacing: 3px;
  margin-bottom: 8px;
  color: rgba(0, 0, 0, 0.85)
}
.hero .header {
  font-size: 72rpx;
  font-weight: bold;
  margin: 0 12% 8px;
}
.hero .description {
  padding: 0 12%;
  margin-bottom: 32px;
}
.button {
  display: inline-block;
  margin: 4px;
  background: #e0e1e2;
  padding: 0 24px;
  color: rgba(0, 0, 0, 0.6);
  font-weight: bold;
  border-radius: 5px;
  font-size: 32rpx;
  transition: 0.3 all;
}
.button::after {
  content: none;
}
.button.primary {
  background: #000000;
  color: rgba(255, 255, 255, 0.9);
}
.button-hover {
  opacity: 0.7
}