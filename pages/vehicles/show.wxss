.cover {
  position: relative;
}
.cover image, .cover video {
  height: 38.2vh;
}
.cover .content {
  display: flex;
  justify-content: space-between;
  align-items:flex-end;
  padding: 8px 16px;
  position: absolute;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  color: rgba(255, 255, 255, 0.85);
  text-shadow: 0 5px 19px rgba(0, 0, 0, 0.5);
  background-image: linear-gradient(rgba(0,0,0,0) 7%, rgba(0,0,0,0.05) 100%)
}
.cover .header {
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
}
.cover .sub-header {
  font-size: 26rpx;
  font-weight: normal;
  text-transform: uppercase;
  letter-spacing: 4rpx;
}
.cover .meta {
  font-size: 26rpx;
}

.spec {
  display: flex;
  border-bottom: 1px solid #ededed;
  font-size: 24rpx;
}
.spec .item {
  border-right: 1px solid #ededed;
  width: 100%;
  padding: 64rpx;
}
.spec .item .value text {
  font-size: 60rpx;
  margin-right: 8rpx;
}

.action {
  text-align: center;
  pad: 48px;
}
.action .description {
  margin-bottom: 48rpx;
}

.story {

}
.story.white {
  background: #ffffff;
}
.story.content {
  display: flex;
  flex-direction: column;
  height: 38.2vh;
  padding-top: 10%;
  text-align: center;
}
.story .header {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16px;
}
.story .sub-header {
  font-size: 28rpx;
  text-transform: uppercase;
  letter-spacing: 6px;
  margin-bottom: 8px;
  color: rgba(0, 0, 0, 0.75);
}
.story .description {
  padding: 0 12%;
}
.story image,.story video {
  height: 41.8vh;
}